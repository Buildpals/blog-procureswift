								<div class="middle-area">
									<a class="name" href="#"><b>Katy Liu</b></a>
									<h6 class="date">on <%= @post.created_at.strftime("%m/%d/%Y")   %></h6>
								</div>

							</div><!-- post-info -->

							<p class="para"><%= @post.content %></p>

						</div><!-- post-top-area -->

